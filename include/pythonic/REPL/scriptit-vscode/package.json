{
  "name": "scriptit-lang",
  "displayName": "ScriptIt Language Support",
  "description": "Syntax highlighting, IntelliSense, error diagnostics, notebook support, and file icons for the ScriptIt programming language",
  "version": "0.1.0",
  "publisher": "pythonic",
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets",
    "Notebooks"
  ],
  "keywords": [
    "scriptit",
    "pythonic",
    "scripting",
    "language",
    "notebook"
  ],
  "activationEvents": [
    "onLanguage:scriptit",
    "onNotebook:scriptit-notebook"
  ],
  "main": "./out/client/extension.js",
  "icon": "images/icon.svg",
  "contributes": {
    "languages": [
      {
        "id": "scriptit",
        "aliases": ["ScriptIt", "scriptit", "si"],
        "extensions": [".si", ".sit"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/sit-icon.svg",
          "dark": "./images/sit-icon.svg"
        }
      },
      {
        "id": "scriptit-notebook-src",
        "aliases": ["ScriptIt Notebook Source"],
        "extensions": [".nsit"],
        "icon": {
          "light": "./images/nsit-icon.svg",
          "dark": "./images/nsit-icon.svg"
        }
      }
    ],
    "notebooks": [
      {
        "type": "scriptit-notebook",
        "displayName": "ScriptIt Notebook",
        "selector": [
          { "filenamePattern": "*.nsit" }
        ]
      }
    ],
    "grammars": [
      {
        "language": "scriptit",
        "scopeName": "source.scriptit",
        "path": "./syntaxes/scriptit.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "scriptit",
        "path": "./snippets/scriptit.json"
      }
    ],
    "iconThemes": [
      {
        "id": "scriptit-icons",
        "label": "ScriptIt File Icons",
        "path": "./themes/scriptit-icon-theme.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "ScriptIt",
      "properties": {
        "scriptit.scriptitPath": {
          "type": "string",
          "default": "scriptit",
          "description": "Path to the ScriptIt binary. If installed system-wide, just 'scriptit'. Otherwise, provide the full path."
        },
        "scriptit.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the linter."
        },
        "scriptit.enableLinting": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Enable/disable real-time error diagnostics."
        },
        "scriptit.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Traces the communication between VS Code and the ScriptIt language server."
        }
      }
    },
    "commands": [
      {
        "command": "scriptit.runFile",
        "title": "ScriptIt: Run Current File",
        "icon": "$(play)"
      },
      {
        "command": "scriptit.runSelection",
        "title": "ScriptIt: Run Selection"
      },
      {
        "command": "scriptit.openNotebook",
        "title": "ScriptIt: Open Notebook Server"
      },
      {
        "command": "scriptit.restartKernel",
        "title": "ScriptIt: Restart Notebook Kernel",
        "icon": "$(debug-restart)"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "scriptit.runFile",
          "when": "resourceLangId == scriptit",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "scriptit.runFile",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "resourceLangId == scriptit"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint src --ext ts",
    "package": "npx @vscode/vsce package --allow-missing-repository"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0",
    "vscode-languageserver": "^9.0.0",
    "vscode-languageserver-textdocument": "^1.0.0"
  }
}
